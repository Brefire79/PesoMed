{
  "name": "DoseCheck",
  "short_name": "DoseCheck",
  "description": "DoseCheck: PWA offline-first para monitorar aplicações, peso e medidas corporais.",
  "id": "./",
  "lang": "pt-BR",
  "dir": "ltr",
  "start_url": "./#/dashboard",
  "scope": "./",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "orientation": "portrait-primary",
  "background_color": "#07111c",
  "theme_color": "#0b1b2b",
  "categories": ["health", "medical", "lifestyle", "productivity"],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "icons": [
    {
      "src": "./icons/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "./icons/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "./icons/maskable-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Abrir o painel principal",
      "url": "./#/dashboard"
    },
    {
      "name": "Nova aplicação",
      "short_name": "+ Aplic",
      "description": "Ir para Aplicações",
      "url": "./#/injections"
    },
    {
      "name": "Registrar peso",
      "short_name": "+ Peso",
      "description": "Ir para Peso & Medidas",
      "url": "./#/body"
    },
    {
      "name": "Relatório",
      "short_name": "Relatório",
      "description": "Abrir o Relatório médico",
      "url": "./#/report"
    }
  ],
  "screenshots": [
    {
      "src": "./icons/screenshot-narrow.svg",
      "sizes": "1080x1920",
      "type": "image/svg+xml",
      "form_factor": "narrow",
      "label": "Dashboard (mobile)"
    },
    {
      "src": "./icons/screenshot-wide.svg",
      "sizes": "1920x1080",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Dashboard (desktop)"
    }
  ]
}
